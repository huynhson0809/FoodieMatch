generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Place {
  id          String   @id @default(uuid())
  name        String
  address     String
  phone       String?
  website     String?
  lat         Float?
  lng         Float?
  rating      Float?
  reviewCount Int?
  priceRange  String?
  source      String   @default("UNKNOWN") // "GOOGLE", "FOODY", "MERGED"
  externalId  String?  // Original ID/URL from source
  images      String[] // Stored as array of strings
  

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([name])
  @@unique([externalId, source])
}


